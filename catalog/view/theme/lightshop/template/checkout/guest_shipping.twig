				<span  class="checkout__input-box-title {{ attribute(_context, fieldNameR)  ? 'required' : ''  }}">{{ attribute(_context, fieldNameN) }}</span>
				{% if (fieldName == 'country') %} 
					<div class="select">
						<select name="country_id" id="input-shipping-country" class="select--squer select select-checkout" data-placeholder="{{ entry_country }}">
							<option value="">{{ text_select }}</option>
							{% for country in countries %} 
							{% if (country['country_id'] == country_id) %} 
							<option value="{{ country['country_id'] }}" selected="selected">{{ country['name'] }}</option>
							{% else %} 
							<option value="{{ country['country_id'] }}">{{ country['name'] }}</option>
							{% endif %} 
							{% endfor %} 
						</select>
					</div>
				{% elseif (fieldName == 'zone') %}	
						<div class="select">
							<select name="zone_id" id="input-shipping-zone" class="select--squer select select-checkout" data-placeholder="{{ entry_zone }}"></select>
						</div>	
				{% else %}				
					<input type="text" name="{{ fieldName }}" value="{{ attribute(_context, fieldNameV) }}" placeholder="{{ attribute(_context, fieldNameN) }}" id="input-shipping-{{ (fieldName)|replace({'_': '-'}) }}">
				{% endif %} 
					{% if attribute(_context, fieldNameE) %}
							<div class="checkout__input-box-error">{{ attribute(_context, fieldNameE) }}</div>
					{% endif %} 
			</div>
		{% endfor %} 

		{% for custom_field in custom_fields %} 
		{% if (custom_field['location'] == 'address') %} 
		{% if (custom_field['type'] == 'select') %} 
		<div class="checkout__input-box form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
			<div class="select">
			<select name="custom_field[{{ custom_field['custom_field_id'] }}]" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" class="select--squer select select-checkout" data-placeholder="{{ text_select }}">
				<option value="">{{ text_select }}</option>
				{% for custom_field_value in custom_field['custom_field_value'] %} 
				{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
				<option value="{{ custom_field_value['custom_field_value_id'] }}" selected="selected">{{ custom_field_value['name'] }}</option>
				{% else %} 
				<option value="{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</option>
				{% endif %} 
				{% endfor %}		
			</select>
			</div>
		</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'radio') %} 
			<div class="checkout__radio-box form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
				<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
				<div id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
				{% for custom_field_value in custom_field['custom_field_value'] %} 
					{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
					<div class="checkout__radio-item">
						<input name="custom_field[{{ custom_field['custom_field_id'] }}]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="radio" value="{{ custom_field_value['custom_field_value_id'] }}" checked="checked">
						<label for="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</label>
					</div>
					{% else %} 
					<div class="checkout__radio-item">
						<input name="custom_field[{{ custom_field['custom_field_id'] }}]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="radio" value="{{ custom_field_value['custom_field_value_id'] }}">
						<label for="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</label>
					</div>
					{% endif %} 
				{% endfor %}	
				</div>
			</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'checkbox') %} 
			<div class="checkout__checkbox-box form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
				<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
				<div id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
				{% for custom_field_value in custom_field['custom_field_value'] %} 
					{% if (address_custom_field[custom_field['custom_field_id']] is defined and custom_field_value['custom_field_value_id'] == address_custom_field[custom_field['custom_field_id']]) %} 
					<div class="checkout__checkbox-item">
						<input name="custom_field[{{ custom_field['custom_field_id'] }}]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="checkbox" value="{{ custom_field_value['custom_field_value_id'] }}" checked="checked">
						<label for="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</label>
					</div>
					{% else %} 
					<div class="checkout__checkbox-item">
						<input name="custom_field[{{ custom_field['custom_field_id'] }}]" id="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}" type="checkbox" value="{{ custom_field_value['custom_field_value_id'] }}">
						<label for="custom_field[{{ custom_field['custom_field_id'] }}]-{{ custom_field_value['custom_field_value_id'] }}">{{ custom_field_value['name'] }}</label>
					</div>
					{% endif %} 
				{% endfor %} 
				</div>
			</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'text') %} 
		<div class="checkout__input-box form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
			<input type="text" name="custom_field[{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">
		</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'textarea') %} 
		<div class="checkout__textarea-box form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title">{{ custom_field['name'] }}</span>
			<textarea name="custom_field[{{ custom_field['custom_field_id'] }}]" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}">{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}</textarea>
		</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'file') %} 
		<div class="checkout__file-box form-group custom-field" data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
			<button type="button" id="button-shipping-custom-field{{ custom_field['custom_field_id'] }}" class="btn">{{ button_upload }}</button>
			<input type="hidden" name="custom_field[{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : '' }}" />
		</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'date') %} 
		<div class="checkout__input-box form-group custom-field " data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
			<input type="text" name="custom_field[{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="YYYY-MM-DD" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" class="date">
		</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'time') %} 
		<div class="checkout__input-box form-group custom-field " data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
			<input type="text" name="custom_field[{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="HH:mm" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" class="time">
		</div>	
		{% endif %} 
		{% if (custom_field['type'] == 'datetime') %} 
		<div class="checkout__input-box form-group custom-field " data-sort="{{ custom_field['sort_order'] }}">
			<span class="checkout__input-box-title {{ custom_field['required'] ? ' required' : '' }}">{{ custom_field['name'] }}</span>
			<input type="text" name="custom_field[{{ custom_field['custom_field_id'] }}]" value="{{ address_custom_field[custom_field['custom_field_id']] is defined ? address_custom_field[custom_field['custom_field_id']] : custom_field['value'] }}" data-date-format="YYYY-MM-DD HH:mm" placeholder="{{ custom_field['name'] }}" id="input-shipping-custom-field{{ custom_field['custom_field_id'] }}" class="datetime">
		</div>	
		{% endif %} 
		{% endif %} 
		{% endfor %}	
	</div>
</div>	
